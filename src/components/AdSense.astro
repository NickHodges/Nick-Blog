---
const isProd = import.meta.env.PROD;
---

<div class="ad-container">
  {
    isProd ? (
      <>
        <script is:inline async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9957327027530940" crossorigin="anonymous" />
        {/* NickAd */}
        <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-9957327027530940" data-ad-slot="6923999981" data-ad-format="horizontal" data-full-width-responsive="true" />
        <script is:inline>
          {/* @ts-ignore */}
          (window.adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </>
    ) : (
      <div class="ad-placeholder">
        <span>Advertisement Placeholder (728x90)</span>
      </div>
    )
  }
</div>

<style>
  .ad-container {
    width: 100%;
    max-width: 728px;
    margin: 2rem auto;
    min-height: 90px;
  }

  .ad-placeholder {
    width: 100%;
    height: 90px;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px dashed #ccc;
    color: #666;
    font-size: 0.9rem;
  }
</style>
